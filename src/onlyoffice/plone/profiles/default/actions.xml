<?xml version="1.0"?>
<object name="portal_actions" meta_type="Plone Actions Tool"
   xmlns:i18n="http://xml.zope.org/namespaces/i18n">
    <object name="object_buttons" meta_type="CMF Action Category">
        <object name="download-as-file" meta_type="CMF Action" i18n:domain="onlyoffice.plone">
            <property name="title" i18n:translate="">Download as</property>
            <property name="description" i18n:translate=""></property>
            <property
                name="url_expr">string:$object_url/onlyoffice-download-as-file</property>
            <property name="icon_expr"></property>
            <property
                name="available_expr">object/@@onlyoffice-download-as-file/isAvailable|nothing</property>
            <property name="permissions">
                <element value="View"/>
            </property>
            <property name="visible">True</property>
            <property name="modal" type="text">{"width": "300"}</property>
        </object>
        <object name="download-as-document" meta_type="CMF Action" i18n:domain="onlyoffice.plone">
            <property name="title" i18n:translate="">Download as</property>
            <property name="description" i18n:translate=""></property>
            <property
                name="url_expr">string:$object_url/onlyoffice-download-as-document</property>
            <property name="icon_expr"></property>
            <property
                name="available_expr">object/@@onlyoffice-download-as-document/isAvailable|nothing</property>
            <property name="permissions">
                <element value="View"/>
            </property>
            <property name="visible">True</property>
            <property name="modal" type="text">{"width": "300"}</property>
        </object>
    </object>
</object>